start = "Hello World!"
print (start)

nome=0   #zero é variavel vazia?
if nome:
  print(nome)
else:
  print("sem nome")

time1=int(input('gols do primeiro time: '))
time2=int(input('gols do segundo time: '))
if time1 == time2:
  print('impate')
elif time1 < time2:
  print('time 2 ganhou')
else:
  print('time 1 ganhou')

valor_da_compra=int(input('valor total da compra: '))
vezes=int(input('quantidade de prestações: '))
prestacao = valor_da_compra/vezes
print('Valor da mensalidade é $:',prestacao)


idade=int(input('idade: '))
if idade <= 7:
  print('Infantil A')
elif idade <= 11:
  print('Infantil B')
elif idade <= 13:
  print('Juvinil A')
elif idade <= 17:
  print('Juvenil B')
else:
  print('Adulto')


